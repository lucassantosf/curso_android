<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="whatsappclone.cursoandroid.com.whatsappclone.activity.MainActivity">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <whatsappclone.cursoandroid.com.whatsappclone.helper.SlidingTabLayout
        android:id="@+id/stl_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"></whatsappclone.cursoandroid.com.whatsappclone.helper.SlidingTabLayout>

    <android.support.v4.view.ViewPager android:id="@+id/vp_pagina"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
